---
import { faker } from '@faker-js/faker'
import '@fontsource/twinkle-star';
import ArrowDown from '../../../public/icons/ArrowDown.astro';

const img = faker.image.url()
---
<script>
    document.querySelector('.smooth-scroll').addEventListener('click', function(event) {
        event.preventDefault();
        document.querySelector('.smooth-scroll').scrollIntoView({ behavior: 'smooth' });
    });
</script>



<main class="h-[100vh] ">
    <div class="h-[80vh]">
        <img src={img} alt="SB Diseños" class="absolute w-full h-[80vh] object-cover -z-10">
        
        <div class="w-full h-[80vh] flex justify-center items-top pt-[120px]">
            <h2 class="text-4xl font-bold text-white m-3">Todo lo que buscas para vos y tu pequeño</h2>
        </div>
    </div>
    <div class="size-14 m-auto mt-4 arrow-container cursor-pointer">
        <a href="#ProductosDestacados" class="smooth-scroll">
            <ArrowDown />
        </a>
    </div>
</main>

<style>
    div h2{
        font-family: 'Twinkle Star', cursive;
    }

    .arrow-container{
        animation: up-down 1s ease-in-out infinite alternate;
    }

    @keyframes up-down {
        from{
            transform: translateY(0);
        }
        to{
            transform: translateY(20px);
        }
    }
</style>